<Project>

  <ItemGroup>
    <!-- https://learn.microsoft.com/en-us/dotnet/standard/library-guidance/sourcelink -->
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
  </ItemGroup>

  <PropertyGroup>
    <!-- Publish the repository URL in the built .nupkg (in the NuSpec <Repository> element) -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>

    <!-- Embed source files that are not tracked by the source control manager in the PDB -->
    <EmbedUntrackedSources>true</EmbedUntrackedSources>

    <!-- <DebugType>embedded</DebugType> -->
    <IncludeSource>true</IncludeSource>

    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

  </PropertyGroup>

  <ItemGroup>
    <!-- https://github.com/adamralph/minver -->
    <PackageReference Include="MinVer" Version="6.0.0" PrivateAssets="All" />
  </ItemGroup>
  
  <PropertyGroup>
    <MinVerTagPrefix>v</MinVerTagPrefix>
  </PropertyGroup>

  <Target Name="FixVersion" AfterTargets="MinVer">
    <PropertyGroup>
      <!-- Assembly Version must be 1.0.0.0 -->
      <AssemblyVersion>1.0.0.0</AssemblyVersion>
    </PropertyGroup>
  </Target>

  <PropertyGroup>
    <Deterministic>true</Deterministic>
  </PropertyGroup>

  <PropertyGroup>
    <NoWarn>SYSLIB0021,SYSLIB0014,1591,CS1587</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <NuGetAudit>false</NuGetAudit>
    <CheckEolTargetFramework>false</CheckEolTargetFramework>
  </PropertyGroup>


  <!-- <ItemGroup>
	    <PackageReference Include="DefaultDocumentation" Version="1.2.2" PrivateAssets="all"/>
  </ItemGroup>

  <PropertyGroup>
    <DefaultDocumentationFolder>$(MSBuildThisFileDirectory)..\wiki\api\$(AssemblyName)</DefaultDocumentationFolder>
    <DefaultDocumentationIncludeUndocumentedItems>true</DefaultDocumentationIncludeUndocumentedItems>
  </PropertyGroup> -->


  <PropertyGroup>
    <TargetFrameworks>net6.0;netcoreapp3.1;netcoreapp2.1</TargetFrameworks>

    <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>

  </PropertyGroup>

  <PropertyGroup>
    <CopyrightYear>$([System.DateTime]::UtcNow.ToString(yyyy))</CopyrightYear>

    <Newtonsoft_Json_Version>13.0.3</Newtonsoft_Json_Version>
  </PropertyGroup>


  <PropertyGroup>
    <AssemblyOriginatorKeyFile>$(MSBuildThisFileDirectory)otc-functiongraph-csharp-runtime.snk</AssemblyOriginatorKeyFile>
    <PublicKey></PublicKey>

    <SignAssembly>true</SignAssembly>
  </PropertyGroup>

  <PropertyGroup>

    <Company>T-Systems International GmbH</Company>
     <Authors>OpenTelekomCloud-Community, PaaS Squad</Authors>
    <Copyright>Copyright Â© T-Systems International GmbH $(CopyrightYear)</Copyright>
     <NeutralLanguage>en-US</NeutralLanguage>

    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>

  </PropertyGroup>

  <PropertyGroup>

    <FileAlignment>512</FileAlignment>
    <OutputType>Library</OutputType>

    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>

    <PackageProjectUrl>
      https://github.com/opentelekomcloud-community/otc-functiongraph-csharp-runtime</PackageProjectUrl>

    <PackageIcon>fg.png</PackageIcon>

    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/opentelekomcloud-community/otc-functiongraph-csharp-runtime</RepositoryUrl>

    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>

  </PropertyGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>
  

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
    <None Include="..\..\..\images\fg.png" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>